@page
@using BusinessObjects.Models;
@using LaundryMidlePlatform.Pages.SessionHelpers;
@model LaundryMidlePlatform.Pages.StoreHomePage.ManageOrder.DetailsModel

@{
    ViewData["Title"] = "Details";
}
@{
    ViewData["Title"] = "Store";
    var store = SessionHelper.GetObjectFromJson<User>(HttpContext.Session, "store");

    if (store == null)
    {
        Layout = "Shared/_AdminError";
        return;
    }
}
<head>
    <style>
        /* Order details */

        .order-details {
            border: 1px solid #ccc;
            padding: 16px;
        }

            .order-details dt {
                font-weight: bold;
            }

            .order-details dd {
                margin-bottom: 8px;
            }

        /* Back to list link */

        .back-to-list {
            margin-top: 16px;
            text-align: right;
        }

            .back-to-list a {
                text-decoration: none;
                color: #000;
            }

                .back-to-list a:hover {
                    color: #ccc;
                }
    </style>
</head>
<body>
    <h1>Details</h1>

    <div>
        <h4>Order</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.StartDateTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.StartDateTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.FinishDateTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.FinishDateTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.TotalPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.TotalPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.OrderStatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.OrderStatus)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.Customer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.Customer.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Order.Store)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Order.Store.Address)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</body>