@page
@using BusinessObjects.Models;
@using LaundryMidlePlatform.Pages.SessionHelpers;
@model LaundryMidlePlatform.Pages.StoreHomePage.ManageMachine.CreateModel

@{
    ViewData["Title"] = "Create";
}
@{
    ViewData["Title"] = "Store";
    var store = SessionHelper.GetObjectFromJson<User>(HttpContext.Session, "store");

    if (store == null)
    {
        Layout = "Shared/_AdminError";
        return;
    }
}
<head>
    <style>
        /* Create washing machine form */

        .create-washing-machine-form {
          border: 1px solid #ccc;
          padding: 16px;
        }

        .create-washing-machine-form label {
          font-weight: bold;
        }

        .create-washing-machine-form input,
        .create-washing-machine-form select {
          width: 100%;
          padding: 8px;
          border: 1px solid #ccc;
          margin-bottom: 8px;
        }

        .create-washing-machine-form input[type="submit"] {
          background-color: #000;
          color: #fff;
          border: none;
          cursor: pointer;
        }

        .create-washing-machine-form input[type="submit"]:hover {
          background-color: #ccc;
        }

        /* Error and success messages */

        .error-message,
        .success-message {
          text-align: center;
          margin: 12px 0;
        }

        .error-message {
          color: red;
        }

        .success-message {
          color: green;
        }

        /* Back to list link */

        .back-to-list {
          margin-top: 16px;
          text-align: right;
        }

        .back-to-list a {
          text-decoration: none;
          color: #000;
        }

        .back-to-list a:hover {
          color: #ccc;
        }
    </style>
</head>
<body>
    <h1>Create</h1>

    <h4>WashingMachine</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" class="create-washing-machine-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="WashingMachine.MachineName" class="control-label"></label>
                    <input asp-for="WashingMachine.MachineName" class="form-control" />
                    <span asp-validation-for="WashingMachine.MachineName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WashingMachine.Performmance" class="control-label"></label>
                    <input asp-for="WashingMachine.Performmance" class="form-control" />
                    <span asp-validation-for="WashingMachine.Performmance" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WashingMachine.Status" class="control-label"></label>
                    <select asp-for="WashingMachine.Status" class="form-control">
                        <option value="true">Ready</option>
                        <option value="false">Running</option>
                    </select>
                    <span asp-validation-for="WashingMachine.Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WashingMachine.StoreId" class="control-label"></label>
                    <input asp-for="Store.StoreName" class="form-control" readonly />
                    <input hidden asp-for="Store.StoreId" class="form-control" readonly />
                    <span asp-validation-for="WashingMachine.StoreId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            @if (!string.IsNullOrEmpty(Model.Error))
            {
                <p class="text-center error-message">
                    <span>Error: @Model.Error</span>
                </p>
            }
            @if (!string.IsNullOrEmpty(Model.Success))
            {
                <p class="text-center success-message">
                    <span>@Model.Success</span>
                </p>
            }
        </div>
    </div>

    <div class="back-to-list">
        <a asp-page="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
