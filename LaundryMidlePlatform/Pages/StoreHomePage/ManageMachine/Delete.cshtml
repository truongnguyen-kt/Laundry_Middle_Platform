@page
@using BusinessObjects.Models;
@using LaundryMidlePlatform.Pages.SessionHelpers;
@model LaundryMidlePlatform.Pages.StoreHomePage.ManageMachine.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
@{
    ViewData["Title"] = "Store";
    var store = SessionHelper.GetObjectFromJson<User>(HttpContext.Session, "store");

    if (store == null)
    {
        Layout = "Shared/_AdminError";
        return;
    }
}
<head>
    <style>
        /* Delete confirmation page */

        .delete-confirmation-page {
            border: 1px solid #ccc;
            padding: 16px;
        }

            .delete-confirmation-page h3 {
                text-align: center;
                margin-bottom: 16px;
            }

            .delete-confirmation-page dl {
                margin-bottom: 16px;
            }

                .delete-confirmation-page dl dt {
                    font-weight: bold;
                }

                .delete-confirmation-page dl dd {
                    margin-bottom: 8px;
                }

            .delete-confirmation-page form {
                text-align: center;
            }

                .delete-confirmation-page form input[type="submit"] {
                    background-color: #f00;
                    color: #fff;
                    border: none;
                    cursor: pointer;
                    padding: 8px 16px;
                }

                    .delete-confirmation-page form input[type="submit"]:hover {
                        background-color: #ccc;
                    }

                .delete-confirmation-page form a {
                    text-decoration: none;
                    color: #000;
                    margin-left: 8px;
                }

                    .delete-confirmation-page form a:hover {
                        color: #ccc;
                    }

        /* Error message */

        .error-message {
            text-align: center;
            margin: 12px 0;
            color: red;
        }

    </style>
</head>
<body>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>WashingMachine</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WashingMachine.MachineName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WashingMachine.MachineName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WashingMachine.Performmance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WashingMachine.Performmance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WashingMachine.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WashingMachine.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoreName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WashingMachine.Store.Address)
        </dd>
    </dl>
     @if (!string.IsNullOrEmpty(Model.Error))
    {
        <p class="text-center" style="margin: 12px 0;">
            <span style="color:red;">Error: @Model.Error</span>
        </p>
    }
    <form method="post">
        <input type="hidden" asp-for="WashingMachine.MachineId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
</body>